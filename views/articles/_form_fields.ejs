<div class="form-group mb-3">
    <label for="title">Title</label>
    <input type="text" id="title" value="<%= article.title %>" name="title" class="form-control" required>
</div>

<div class="form-group mb-3">
    <label for="description">Description</label>
    <textarea name="description" id="description" rows="5" class="form-control"><%= article.description %></textarea>
</div>

<div class="form-group mb-3">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" rows="7" class="form-control" required><%= article.markdown %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button class="btn btn-primary">Save</button>
